if [ "$q2" = "y" ]; then
    {
    echo "yes"
    }
else
    {
		echo " "
		echo "操作终止！"
		echo " "
		exit 0
    }
fi
qwe=$(mount | grep $ddiskp | awk '{print $1}')
if [ -n "$qwe" ]; then
    {
    zxc=1
    sdf=$(mount | grep $ddiskp)
    sdfg=${sdf%%' ('*}
    sdfgh=${sdfg#*'on '}
	echo " "
    echo "目标磁盘的挂载点为 "$sdfgh" 是否正确？（按 y 或 n）"
